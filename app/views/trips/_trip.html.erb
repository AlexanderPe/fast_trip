<div class="block"> 
<div class="image">
<%= link_to image_tag(trip.image_url(:thumb).to_s), trip_path(trip.id) %> 
</div>
<div class="title trip_left"><%= trip.title %></div>
<div class="dates trip_left">15 декабря - 18 декабря</div>
<div class="places trip_left">Лондон, Великобритания</div>
<div class="price"><p>1488</p></div>
<div class="line"><div class="left"></div></div><div class="right"></div> </div>

<% if current_user.try(:admin?) %>
<%= link_to "edit", edit_trip_path(trip.id), :class => 'action' %> 
| <%= link_to "delete", trip, method: :delete,
data: { confirm: "You sure?" },
title: trip.title %>
<% end %>